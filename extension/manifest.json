{
  "manifest_version": 3,
  "name": "VerifyNews Quick Check",
  "version": "1.0.0",
  "description": "Quickly verify news and claims from any website using VerifyNews AI.",
  "permissions": ["contextMenus", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
