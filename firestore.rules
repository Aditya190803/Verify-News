rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to verifications (for sharing results)
    match /verifications/{document} {
      allow read: if true;
      // Allow create by anyone so results can be saved without auth
      allow create: if true;
      // Only the owner (by userId) can update/delete
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow users to manage their own search history
    match /searchHistory/{document} {
      // Allow create if the new document has the requesting user's uid
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Allow read/update/delete only if the stored doc belongs to the user
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow users to manage their own user profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other operations
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
